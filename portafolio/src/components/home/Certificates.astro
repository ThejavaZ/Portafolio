---
import CertificateItem from "./CertificateItem.astro"

import { getCollection } from "astro:content"

const certificates = await getCollection("certificates")
---

<div class="flex flex-col items-center justify-center bg-gray-800 rounded py-5 mb-5">
    <h2 class="font-bold text-2xl">Certificados</h2>
    <div class="flex items-center justify-between">
        {
            certificates.map((certificate, index) => {
                const {slug, data} = certificate;
                const {title,firstColor, secondColor} = data
                return(
                    <CertificateItem key={index} url={`/certificate/${slug}`} image={`/technologies/${title}.png`} name={`${title}`} firstColor={firstColor} secondColor={secondColor}/>
                );

            })
        }
    </div>
</div>