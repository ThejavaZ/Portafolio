---
import Layout from "../../layouts/Layout.astro"
import { Image } from "astro:assets"
---

<Layout title="Frontend">
    <div class="bg-green-700 dark:bg-gray-900 py-4 mb-5 flex flex-row items-center justify-center *:mx-5 *:my-2">
        <Image transition:name="frontend" src="/technologies/client.png" alt="Python Logo" width={100} height={100} />
        <h1 class="text-4xl font-bold text-center my-5">Frontend</h1>
    </div>

    <div class="flex flex-col justify-center py-2">
        <h2 class="text-2xl font-semibold my-3 text-center">Stack</h2>
        <ul class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mx-5 *:transition *:flex *:flex-col *:items-center *:my-2 *:mx-2 *:dark:bg-gray-600 *:rounded *:hover:scale-105 *:hover:cursor-pointer">
            <li>
                <h3 class="font-bold text-2xl">HTML</h3>
                <Image src="/technologies/html5.png" alt="HTML5" width={60} height={60} />
                <p>Tipo: <strong>Lenguaje de estructura</strong></p>
            </li>
            <li>
                <h3 class="font-bold text-2xl">CSS</h3>
                <Image src="/technologies/css.png" alt="css" width={60} height={60} />
                <p>Tipo: <strong>Lenguaje de estilos</strong></p>
            </li>

            <li>
                <h3 class="font-bold text-2xl">Tailwindcss</h3>
                <Image src="/technologies/tailwindcss.webp" alt="tailwindcss" width={60} height={60} />
                <p>Tipo: <strong>Framework de estilos</strong></p>
            </li>

            <li>
                <h3 class="font-bold text-2xl">BootStrap 5</h3>
                <Image src="/technologies/bootstrap.png" alt="bootstrap" width={60} height={60} />
                <p>Tipo: <strong>Framework de estilos</strong></p>
            </li>

            <li>
                <h3 class="font-bold text-2xl">JavaScript</h3>
                <Image src="/technologies/javascript.png" alt="javascript" width={60} height={60} />
                <p>Tipo: <strong>Lenguaje de programacion</strong></p>
            </li>

            <li>
                <h3 class="font-bold text-2xl">TypeScript</h3>
                <Image src="/technologies/typescript.png" alt="typescript" width={60} height={60} />
                <p>Tipo: <strong>SuperSet de javascript</strong></p>
            </li>

            <li>
                <h3 class="font-bold text-2xl">React</h3>
                <Image src="/technologies/react.png" alt="react" width={60} height={60} />
                <p>Tipo: <strong>Libreria frontend</strong></p>
            </li>

            <li>
                <h3 class="font-bold text-2xl">VueJS</h3>
                <Image src="/technologies/vue.png" alt="vue" width={60} height={60} />
                <p>Tipo: <strong>Framework frontend</strong></p>
            </li>

            <li>
                <h3 class="font-bold text-2xl">Astro 5</h3>
                <Image src="/technologies/astro.png" alt="astro" width={60} height={60} />
                <p>Tipo: <strong>Framework Frontend</strong></p>
            </li>

            <!-- <li>
                <h3 class="font-bold text-2xl">NextJS</h3>
                <Image src="/technologies/next.png" alt="nextjs" width={60} height={60} />
                <p>Tipo: <strong>Framework Frontend</strong></p>
            </li>

            <li>
                <h3 class="font-bold text-2xl">SVelte</h3>
                <Image src="/technologies/yolo.png" alt="Ultralytics" width={60} height={60} />
                <p>Tipo: <strong>IA</strong></p>
            </li> -->

        </ul>
        <a href="/" class="pr-5 text-green-500 text-end transition hover:underline">Atras</a>
    </div>
</Layout>