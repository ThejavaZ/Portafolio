---
import Layout from "../../layouts/Layout.astro"
import { Image } from "astro:assets"
---

<Layout title="git">
    <div class="bg-green-700 dark:bg-gray-900 py-4 mb-5 flex flex-row items-center justify-center *:mx-5 *:my-2">
        <Image transition:name="git" src="/technologies/git.png" alt="git" width={100} height={100} />
        <h1 class="text-4xl font-bold text-center my-5">Control de versiones</h1>
    </div>

    <div class="flex flex-col justify-center py-2">
        <h2 class="text-2xl font-semibold my-3 text-center">Stack</h2>
        <ul class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mx-5 *:transition *:flex *:flex-col *:items-center *:my-2 *:mx-2 *:dark:bg-gray-600 *:rounded *:hover:scale-105 *:hover:cursor-pointer">
            <li>
                <h3 class="font-bold text-2xl">Git</h3>
                <Image src="/technologies/git.png" alt="git" width={60} height={60} />
                <p>Tipo: <strong>Control de versiones</strong></p>
            </li>
            <li>
                <h3 class="font-bold text-2xl">Github</h3>
                <Image src="/technologies/github.png" alt="github" width={60} height={60} />
                <p>Tipo: <strong>Plataforma de versiones</strong></p>
            </li>

            <li>
                <h3 class="font-bold text-2xl">GitLab</h3>
                <Image src="/technologies/gitlab.png" alt="gitlab" width={60} height={60} />
                <p>Tipo: <strong>Plataforma de versiones</strong></p>
            </li>

        </ul>
        <a href="/" class="pr-5 text-green-500 text-end transition hover:underline">Atras</a>
</Layout>