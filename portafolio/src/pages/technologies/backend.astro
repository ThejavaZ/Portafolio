---
import Layout from "../../layouts/Layout.astro"
import { Image } from "astro:assets"
---

<Layout title="Backend">
    <div class="bg-green-700 dark:bg-gray-900 py-4 mb-5 flex flex-row items-center justify-center *:mx-5 *:my-2">
        <Image transition:name="backend" src="/technologies/server.png" alt="backend" width={100} height={100} />
        <h1 class="text-4xl font-bold text-center my-5">Backend</h1>
    </div>

    <div class="flex flex-col justify-center py-2">
        <h2 class="text-2xl font-semibold my-3 text-center">Stack</h2>
        <ul class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mx-5 *:transition *:flex *:flex-col *:items-center *:my-2 *:mx-2 *:dark:bg-gray-600 *:rounded *:hover:scale-105 *:hover:cursor-pointer">
            <li>
                <h3 class="font-bold text-2xl">PHP</h3>
                <Image src="/technologies/php.png" alt="php" width={60} height={60} />
                <p>Tipo: <strong>Lenguaje de programacion</strong></p>
            </li>
            <li>
                <h3 class="font-bold text-2xl">Laravel</h3>
                <Image src="/technologies/laravel.png" alt="laravel" width={60} height={60} />
                <p>Tipo: <strong>Framework backend</strong></p>
            </li>

            <li>
                <h3 class="font-bold text-2xl">NodeJS</h3>
                <Image src="/technologies/node.png" alt="nodejs" width={60} height={60} />
                <p>Tipo: <strong>Framework backend</strong></p>
            </li>
        </ul>
        <a href="/" class="pr-5 text-green-500 text-end transition hover:underline">Atras</a>
    </div>
</Layout>